---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
// import { AstroSeo } from "@astrolib/seo";
import { Image } from 'astro:assets';
---
<BaseLayout>
  <section class="bg-[var(--clr-bgk)]">
    <div class="px-8 py-12 md:px-12 mx-auto lg:pt-24 max-w-7xl lg:px-32 bg-[var(--clr-card-bgk)]">
      <div class="lg:text-center" >
        <Image 
          class="w-full aspect-[16/9]  rounded-[1rem] object-cover object-center"
          src={frontmatter.image.url}
          alt={frontmatter.image.alt}
          transition:name={`media-image-${frontmatter.id}`} 
          width={100} 
          height={50}/>
         <div class="flex  flex-col md:flex-row mt-4 px-4 justify-between">
            <p class="text-xs text-zinc-500 ">{frontmatter.pubDate.toString().slice(0, 10)} - Written by: {frontmatter.author}</p>
           <div class="flex gap-3 items-end ">
              {
                frontmatter.tags.map((tag) => (
                  <span class="inline-flex items-center uppercase    hover:text-blue-500   text-xs font-medium text-black">
                    <a href={`/tags/${tag}`}>{tag}</a>
                  </span>
                ))
              }
           </div>
         </div>
        <h1 class="text-4xl tracking-tight text-balance mt-12 lg:mt-16 font-medium font-display text-black md:text-8xl">
          {frontmatter.title}
        </h1>
        <p class="max-w-2xl mt-8 mx-auto text-zinc-500">
          <em>{frontmatter.description}</em>
        </p>
      </div>
      <div class="mt-12 max-w-2xl mx-auto">
        <div class="prose-styles">
          <slot />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
