---
const { 
  title, 
  url, 
  description, 
  pubDate, 
  author, 
  image, 
  tags, 
  mediaTransitionName } = Astro.props;

  import Image from "astro/components/Image.astro";
---

<li>
  <a 
    href={url} 
    title={title} 
    class="group"
    >
    <article 
      class="bg-[var(--clr-card-bgk)] p-4 flex-1 h-full flex flex-col rounded-xl overflow-hidden"
     >
      <div 
        class="block w-full lg:col-span-2" 
        transition:name={mediaTransitionName}
        >
        <Image 
          class="w-full aspect-[1]  rounded-[0.65rem] object-cover object-top"
          src={image}
          alt={title}
          width={100} 
          height={50}/>
      </div>
      <div
        class="flex flex-col items-start justify-between h-full flex-1 w-full mt-2"
      >
        <div>
          <div class="inline-flex space-x-1 items-center">
            <p class="text-xs font-medium text-black">{author}</p>
            <span aria-hidden="true">&middot;</span>
            <div class="flex text-xs text-zinc-400">
              <time datetime="2020-03-16">{pubDate}</time>
            </div>
          </div>
          <h3 class="text-[var(--astro-code-color-text)] text-xl font-bold text-pretty">
            {title}
          </h3>
        </div>
        <p class="text-sm text-zinc-500 line-clamp-2">{description}</p>
        <div class="mt-4 flex space-x-2">
          {
            tags.map((tag) => (
              <span class="rounded-sm bg-[var(--clr-tags)] px-2 p-1 text-xs font-medium text-black">{tag}</span>
            ))
          }
        </div>
      </div>
    </article>
  </a>
</li>

<style>
  article {
    transition: all 240ms ease-in-out;
    &:hover {
      box-shadow: 0 0 1.5rem hsl(0, 0%, 85%);
    }
  }
</style>