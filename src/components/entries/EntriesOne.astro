---
const {
  title,
  url,
  description,
  pubDate,
  author,
  image,
  tags,
  mediaTransitionName,
} = Astro.props;

import Image from "astro/components/Image.astro";
---

<li>
  <a href={url} title={title} class="group">
    <article
      class="border_shadow bg-[var(--clr-card-bgk)] h-full flex flex-col rounded-lg overflow-hidden hover:shadow-2xl transition-all"
    >
      <header class="p-4 flex items-center gap-2">
        <h3
          class="text-[var(--clr-h-text)] text-lg xl:text-xl font-bold text-pretty"
        >
          {title}
        </h3>
        <div class="text-[var(--clr-base-text)] flex items-center gap-2">
          <span aria-hidden="true">&middot;</span>
          <div class="flex text-xs">
            <time datetime="2020-03-16">{pubDate}</time>
          </div>
        </div>
      </header>
      <div
        class="block w-full overflow-hidden"
        transition:name={mediaTransitionName}
      >
        <Image
          class="w-full aspect-[1] object-cover object-top group-hover:scale-110 transition-all duration-200"
          src={image}
          alt={title}
          width={100}
          height={50}
        />
      </div>
      <div
        class="p-4 flex flex-col items-start justify-between h-full flex-1 w-full"
      >
        <p
          class="my-2 text-[var(--clr-base-text)] text-xs md:text-sm line-clamp-2"
        >
          {description}
        </p>
        <div class="text-xs mt-2 flex gap-2 flex-wrap">
          {
            tags.map((tag) => (
              <span class="border_shadow rounded-sm bg-[var(--clr-tags)] text-[var(--clr-base-text)] px-2 p-1 text-xs font-medium text-black">
                {tag}
              </span>
            ))
          }
        </div>
      </div>
    </article>
  </a>
</li>
