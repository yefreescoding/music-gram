<div class="lines__container">
  <div class="lines">
    <div
      data-position="vertical"
      class="line"
      style="--delay: 1s; margin-left: -95px;"
    >
    </div>
    <div
      data-position="horizontal"
      class="line"
      style="--delay: 1.5s; margin-top: 50px;"
    >
    </div>
    <div
      data-position="vertical"
      class="line"
      style="--delay: 2.2s; margin-left: 70px;"
    >
    </div>
    <div
      data-position="vertical"
      class="line"
      style="--delay: 1.5s; margin-left: -120px;"
    >
    </div>
    <div
      data-position="vertical"
      class="line"
      style="--delay: 2s; margin-left: 150px;"
    >
    </div>
    <div
      data-position="horizontal"
      class="line"
      style="--delay: 2.7s; margin-top: -60px;"
    >
    </div>
  </div>

  <style>
    .lines__container {
      position: relative;
      width: 100%;
      height: 100%;
      background-color: hsl(0, 0%, 93%);
      overflow: hidden;
    }

    .lines {
      position: absolute;
      inset: 0 0 auto 0;
      height: 100%;
      width: 100%;
      margin: 10px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(min(100%, 20em), 1fr));
    }

    .line {
      position: absolute;

      background: hsla(0, 0%, 10%, 0.1);
      /* background: var(--clr-tags); */
      overflow: hidden;

      &[data-position="vertical"] {
        top: 0;
        left: 50%;
        height: 100%;
        width: 1px;

        &::after {
          height: 15vh;
          width: 100%;
          top: -50%;
          left: 0;
          animation: drop 4s 0s infinite;
          animation-delay: var(--delay);
          background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0) 0%,
            var(--clr-accent) 75%,
            var(--clr-accent) 100%
          );
        }
      }

      &[data-position="horizontal"] {
        top: 50%;
        height: 1px;
        width: 100%;

        &::after {
          height: 100%;
          width: 10vw;
          top: 0;
          left: -50%;
          animation: slide 4s 0s infinite;
          animation-delay: var(--delay);
          background: linear-gradient(
            to right,
            rgba(255, 255, 255, 0) 0%,
            var(--clr-accent) 75%,
            var(--clr-accent) 100%
          );
        }
      }

      &::after {
        content: "";
        display: block;
        position: absolute;

        animation-fill-mode: forwards;
        animation-timing-function: cubic-bezier(0.4, 0.26, 0, 0.97);
      }
    }

    @keyframes drop {
      from {
        top: -50%;
      }
      to {
        top: 110%;
      }
    }

    @keyframes slide {
      from {
        left: -50%;
      }
      to {
        left: 110%;
      }
    }
  </style>
</div>
