---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Lines from "@/components/ui/Lines.astro";
import VerticalFade from "@/components/ui/VerticalFade.astro";
---

<BaseLayout>
  <section
    class="h-[90dvh] isolate relative w-full flex justify-center items-center"
  >
    <div class="px-4 md:px-12 mx-auto max-w-full">
      <h1 class="text-center text-8xl font-bolder uppercase">404</h1>
    </div>
    <div class="absolute inset-0 mx-auto max-w-full -z-10">
      <Lines />
    </div>
    <VerticalFade side="bottom" height={"300px"} />
  </section>
</BaseLayout>
